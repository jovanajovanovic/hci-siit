<Window x:Class="MVVMSchedulerApplication.SaveScheduler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMSchedulerApplication"
              xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
        mc:Ignorable="d"
        Icon="util/save1.png"
        Title="SAVE" Height="200" Width="300" FontSize="17"
        local:HelpProvider.HelpKey="Forma">
    <UserControl>

        <Grid>
            <dxlc:LayoutGroup>

                <dxlc:LayoutItem IsRequired="True" Label="Scheduler name:" LabelPosition="Top" FontSize="17" Margin="0,40,-0.4,-39.6">
                    <dxe:TextEdit Name="name_edit" MinWidth="200" FontSize="17"/>
                </dxlc:LayoutItem>


            </dxlc:LayoutGroup>
            <Button Content="Save"   Click="Button_Click" HorizontalAlignment="Center" FontSize="17"  VerticalAlignment="Bottom" Width="74" Margin="210,0,9.6,10.4"/>


        </Grid>
    </UserControl>
</Window>
